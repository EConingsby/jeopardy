.modal-body.leaderboard-modal
  h1 Leaderboard
  .row
    .col-md-6
      h3 Top 10 All-Time Winnings
      table.table
        tr
          th Player
          th Total Winnings
        tr(ng-repeat='player in topEarnings')
          td {{player.playerName}}
          td {{player.totalWinnings | currency:'$':0}}

    .col-md-6
      h3 Top 10 Individual Game Scores
      table.table 
        tr
          th Player
          th Score
          th Date
        tr(ng-repeat='score in topScores')
          td {{score.playerName}}
          td {{score.score | currency:'$':0}}
          td {{score.date}}

  .row
    .col-md-6
      h3 Top 10 Games Won
      table.table
        tr
          th Player
          th Wins
        tr(ng-repeat='player in topWins')
          td {{player.playerName}}
          td {{player.gamesWon}}

    .col-md-6
      h3 Top 10 Win Streaks
      table.table
        tr
          th Player
          th Streak
          th Dates
        tr(ng-repeat='streak in topStreaks')
          td {{streak.playerName}}
          td {{streak.streakLength}} games
          td {{streak.startDate}} - {{streak.endDate}} 