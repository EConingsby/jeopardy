.modal-body
  div(ng-if='show == "daily"')
    | Daily
    br
    | Double
    br
    br
    div(ng-bind-html='scoreHtml')
    iframe(width="420", height="0", src="https://www.youtube.com/embed/_HRJGNPg8MY?autoplay=1&autohide=0&rel=0", frameborder="0", allowfullscreen, style="display:none")
  div(ng-if='show == "clue"')
    h3.text-center {{category.category_name}}
    div(ng-if='!clue.media', ng-bind-html='clue.clue_html')
    div.text-center(ng-if='clue.media && isAudioFile(clue.media[0])')
      span.glyphicon.glyphicon-music.text-primary(style='font-size: 48px; margin: 20px;')
      div(ng-bind-html='clue.clue_text')
    div(ng-if='clue.media && !isAudioFile(clue.media[0])')
      carousel(interval="'5000'")
        slide(ng-repeat='slide in clue.media')
          div(ng-if='!isVideoFile(slide)')
            img(ng-src='{{slide}}')
          div(ng-if='isVideoFile(slide)')
            video(ng-if='!slide.includes("youtube")', controls, style='max-width: 100%; max-height: 700px;')
              source(ng-src='{{slide}}', type='video/mp4')
              | Your browser does not support the video tag.
            iframe(ng-if='slide.includes("youtube")', width='100%', height='700', ng-src='{{slide}}', frameborder='0', allowfullscreen)
      .clue-text-block(ng-bind-html='clue.clue_text', style='margin-top: 30px;')
  div(ng-bind-html='scoreHtml', ng-if='show == "scores"')
  div(ng-if='id == "clue_FJ"')
    iframe(width="420", height="0", src="https://www.youtube.com/embed/1Obmnz_1hZk?autoplay=1&autohide=0&rel=0", frameborder="0", allowfullscreen, style="display:none")
